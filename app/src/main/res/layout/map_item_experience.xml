<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMapExperiences"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="5dp"
    card_view:contentPaddingLeft="-10dp"
    card_view:contentPaddingRight="-15dp"
    app:cardUseCompatPadding="true"
    android:clickable="true">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivMapExperienceImage"
            android:src="@drawable/pattern"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
             />


        <TextView
            android:id="@+id/tvMapTitle"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            tools:text="Kayaking in Mendocino"
            android:layout_alignBaseline="@+id/ivMapExperienceImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColorHighlight="@color/black" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvMapSpotsLeft"
            android:textColor="@android:color/holo_red_light"
            android:layout_alignBottom="@+id/ivMapExperienceImage"
            android:textSize="14sp"
            android:text="5 spot(s) left" />


    </RelativeLayout>




</android.support.v7.widget.CardView>