<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMapExperiences"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="5dp"
    card_view:contentPaddingLeft="-10dp"
    card_view:contentPaddingRight="-15dp"
    app:cardUseCompatPadding="true"
    android:clickable="true">


    <RelativeLayout
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/ivMapExperienceImage"
            android:src="@drawable/placeholderimg"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_height="100dp" />


        <TextView
            android:id="@+id/tvMapTitle"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            tools:text="Kayaking in Mendocino"
            android:layout_below="@+id/ivExperienceImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 spots left"
            android:id="@+id/tvMapSpotsLeft"
            android:textColor="@color/red"
            android:layout_below="@+id/tvMapTitle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textSize="14sp" />


    </RelativeLayout>




</android.support.v7.widget.CardView>