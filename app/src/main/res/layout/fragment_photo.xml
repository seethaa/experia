<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_create_top_margin">



    <TextView
        android:id="@+id/tvPhoto"
        android:textSize="@dimen/lg_creation_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/createPhoto"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/create_frag_spacer" />



    <ImageView
        android:id="@+id/ivExperiencePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btPhoto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/ivExperiencePhoto"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_photo"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmitPhoto"
        android:layout_below="@+id/btPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

