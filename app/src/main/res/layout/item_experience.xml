<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvExperiences"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:contentPaddingLeft="-15dp"
    card_view:contentPaddingRight="-15dp"
    app:cardUseCompatPadding="true"
    android:clickable="true">


        <RelativeLayout
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ivExperienceImage"
                android:src="@drawable/placeholderimg"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_height="250dp"
                android:layout_marginBottom="25dp" />

            <TextView
                android:id="@+id/tvSubtext"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
                tools:text="#Thrill #Fun"
                android:layout_below="@+id/tvTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />








            <TextView
                android:id="@+id/tvExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_chevron_up"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="MORE"
                android:layout_gravity="center"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_marginBottom="24dp"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"
                    tools:text="blahblahblah"
                    android:layout_below="@+id/tvExpand"
                    android:layout_alignLeft="@+id/tvSubtext"
                    android:layout_alignStart="@+id/tvSubtext" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    tools:text="Kayaking in Mendocino"
                    android:layout_below="@+id/ivExperienceImage"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/tvSubtext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/view" />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_above="@+id/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:layout_toEndOf="@+id/tvDescription"
                android:id="@+id/linearLayout3"
                android:layout_toRightOf="@+id/tvDescription">


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_heart"
                    app:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    app:elevation="4dp"
                />

                <!--<ImageButton-->
                    <!--android:id="@+id/btnBookmark"-->
                    <!--android:background="@drawable/circle"-->
                    <!--android:layout_width="45dp"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:padding="8dp"-->
                    <!--android:layout_marginRight="8dp"-->
                    <!--android:src="@drawable/icon_bookmark"-->
                    <!--/>-->

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnRSVP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_join"
                    app:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    app:elevation="4dp"
                    />
                <!--<ImageButton-->
                    <!--android:id="@+id/btnRSVP"-->
                    <!--android:background="@drawable/circle"-->
                    <!--android:layout_width="45dp"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:padding="8dp"-->
                    <!--android:src="@drawable/icon_add" />-->

            </LinearLayout>


            <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/ivCategory"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/icon_impact_a"-->
                <!--app:backgroundTint="@color/colorPrimary"-->
                <!--android:layout_marginRight="10dp"-->
                <!--app:elevation="4dp"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_alignLeft="@+id/tvTitle"-->
                <!--android:layout_alignStart="@+id/tvTitle"-->
                <!--android:layout_margin="5dp"-->
                <!--/>-->

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/ivCategory"
                android:background="@color/semiblack"
                android:clickable="false"
                android:src="@drawable/icon_impact"
                android:layout_alignBottom="@+id/ivExperienceImage"
                android:layout_alignLeft="@+id/tvTitle"
                android:layout_alignStart="@+id/tvTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5 spots left"
                android:id="@+id/tvSpotsLeft"
                android:textColor="@color/mp_lightblue"
                android:layout_below="@+id/ivExperienceImage"
                android:layout_alignRight="@+id/tvSubtext"
                android:layout_alignEnd="@+id/tvSubtext"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" />


        </RelativeLayout>




</android.support.v7.widget.CardView>